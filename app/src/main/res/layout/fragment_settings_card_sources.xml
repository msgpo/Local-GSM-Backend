<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_settings_card_sources_title"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <RadioButton
            android:text="@string/fragment_settings_card_sources_filter_on_phone"
            android:id="@+id/filter_on_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/mozilla_location_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_mls"/>

        <CheckBox
            android:id="@+id/open_cell_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_oci"/>

        <ProgressBar
            android:id="@+id/open_cell_id_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"/>

        <RadioButton
            android:text="@string/fragment_settings_card_sources_filter_remote"
            android:id="@+id/filter_remote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

</androidx.cardview.widget.CardView>